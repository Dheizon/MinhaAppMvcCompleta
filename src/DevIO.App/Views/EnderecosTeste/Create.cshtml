@model DevIO.App.ViewModels.EnderecoTesteViewModel

@{
    ViewData["Title"] = "Cadastro de endereço";
}

<h3 class="text-right">@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <vc:summary></vc:summary>
            <div class="form-row form-group">
                <div class="col col-4">
                    <label asp-for="CEP" class="control-label col-form-label-sm"></label>
                    <input asp-for="CEP" class="form-control form-control-sm cep" autofocus />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row form-group">
                <div class="col col-6">
                    <label asp-for="Logradouro" class="control-label col-form-label-sm"></label>
                    <input asp-for="Logradouro" class="form-control form-control-sm logradouro" />
                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                </div>
                <div class="col col-6">
                    <label asp-for="Cidade" class="control-label col-form-label-sm"></label>
                    <input asp-for="Cidade" class="form-control form-control-sm cidade" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row form-group">
                <div class="col col-6">
                    <label asp-for="Bairro" class="control-label col-form-label-sm"></label>
                    <input asp-for="Bairro" class="form-control form-control-sm bairro" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
                <div class="col col-2">
                    <label asp-for="UF" class="control-label col-form-label-sm"></label>
                    <input asp-for="UF" class="form-control form-control-sm uf" />
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>
            </div>
            <input class="ibge" value="" type="hidden" asp-for="IBGE" />
            <input class="siafi" value="" type="hidden" asp-for="SIAFI" />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-dark" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        BuscaCep();
    </script>
}
